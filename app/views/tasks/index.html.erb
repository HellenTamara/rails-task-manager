
  <h1 class="m-3">My tasks</h1>
  <ul class="list-group m-3">
    <% @tasks.each do |task| %>
    <li class="list-group-item text-decoration-none"><input class="form-check-input me-1" type="checkbox" <%=task.completed ? "checked" : ""%>>
    <%= link_to "#{task.title}" , task_path(task) %><%= link_to task_path(task.id), data: { turbo_method: :delete, turbo_confirm: "Remove #{task.title}?" } do %>
      <span>❌</span>
    <% end %></li>
    <% end %>
  </ul>
  <p class="m-3"><%= link_to " + Add a new task", new_task_path %></p>
