<h1>My tasks</h1>
<ol>
<% @tasks.each do |task| %>
<li><input type="checkbox" <%=task.completed ? "checked" : ""%>>
<%= link_to "#{task.title}" , task_path(task) %><%= link_to task_path(task.id), data: { turbo_method: :delete, turbo_confirm: "Remove #{task.title}?" } do %>
  <span>❌</span>
<% end %></li>
<% end %>
</ol>

<%= link_to " + Add a new task", new_task_path %>
